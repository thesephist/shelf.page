<header>
    <nav class="split">
        <div class="left">
            <a href="/">&larr; Shelf.page</a>
        </div>
        <div class="left">
            <a href="/">Get a shelf &rarr;</a>
        </div>
    </nav>
</header>

<div class="hero">
    <h1>{{display_name}}'s shelf.page</h1>
    <p class="bio">{{bio}}</p>
</div>

<div class="header">
  <div 
    class="header__text"
    data-o-type="object"
    data-l-key-board-heading
    data-o-default-board-heading="My Projects"
    data-i-editable-without-remove
  >{{boardHeading}}</div>
  <button 
    class="button button--add-stack"
    data-i-new="stack"
  >Add another stack</button>
</div>
<div class="board-container">
  <div 
    class="board"
    data-o-key="stacks"
    data-o-type="list"
    data-i-sortable="stacks"
  >
    {{#for stack in stacks}}
      <div 
        class="stack block"
        data-o-type="object"
        data-l-key-stack-heading
        data-o-default-stack-heading="A Project"
      >
        <div class="stack__top">
          <p 
            class="stack__text"
            data-l-target-stack-heading
            data-i-editable
          >{{default stack.stackHeading "New stack item"}}</p>
          <button 
            class="button button--plus-square"
            data-i-new="card"
          >
            <img class="stack__new-icon" src="/images/new.svg">
          </button>
        </div>
        <div 
          class="stack__list"
          data-o-key="cards"
          data-o-type="list"
          data-i-sortable="cards"
        >
          {{#for card in stack.cards}}
            <div 
              class="card"
              data-o-type="object"
              data-l-key-card-text
              data-i-editable
            >
              <p 
                class="card__text"
                data-l-target-card-text
              >{{default card.cardText "New card item"}}</p>
              <img class="card__drag" src="/images/drag.svg">
            </div>
          {{/for}}
        </div>
        <div class="stack__add-card-container">
          <button 
            class="stack__add-card"
            data-i-new="card"
          >
            <img class="stack__add-card-icon" src="/images/plus.svg"><p>Add card</p>
          </button>
        </div>
      </div>
    {{/for}}
  </div>
</div>
